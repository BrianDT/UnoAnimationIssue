<Application x:Class="UnoAnimationIssue.App"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- Load WinUI resources -->
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
      </ResourceDictionary.MergedDictionaries>

      <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
          <Color x:Key="ShapeBackgroundColor">#FFF2F2F2</Color>
        </ResourceDictionary>

        <ResourceDictionary x:Key="Light">
          <Color x:Key="ShapeBackgroundColor">#FF3C3C3C</Color>
        </ResourceDictionary>
      </ResourceDictionary.ThemeDictionaries>

      <SolidColorBrush x:Key="ShapeBackgroundBrush" Color="{ThemeResource ShapeBackgroundColor}"/>
    </ResourceDictionary>
  </Application.Resources>

  <!-- Add resources here -->

</Application>
